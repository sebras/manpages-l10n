#: debian-bullseye debian-unstable
msgid "cron [B<-f>] [B<-l>] [B<-L> I<loglevel>]"
msgstr "cron [B<-f>] [B<-l>] [B<-L> I<niveau>]"

#. type: Plain text
#: debian-bullseye debian-unstable
msgid ""
