#. type: IP
#. #-#-#-#-#  opensuse-leap-15-4: umount.8.pot (PACKAGE VERSION)  #-#-#-#-#
#. type: Plain text
#. #-#-#-#-#  opensuse-tumbleweed: umount.8.pot (PACKAGE VERSION)  #-#-#-#-#
#. type: Plain text
#: debian-bullseye opensuse-leap-15-4 opensuse-tumbleweed
#, no-wrap
msgid "LIBMOUNT_MTAB=E<lt>pathE<gt>"
msgstr "LIBMOUNT_MTAB=E<lt>шляхE<gt>"

#. type: Plain text
#: debian-bullseye opensuse-leap-15-4 opensuse-tumbleweed
msgid "overrides the default location of the mtab file (ignored for suid)"
msgstr "замінює типове розташування файлу mtab (нехтується для suid)"

