msgid "B<int fcntl(int >I<fd>B<, int >I<cmd>B<, ... /* >I<arg>B< */ );>\n"
msgstr "B<int fcntl(int >I<dd>B<, int >I<Bef>B<, … /* >I<arg>B< */ );>\n"

